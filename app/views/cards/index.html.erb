<p id="notice"><%= notice %></p>

<h1>Cards</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Manufacturer</th>
      <th>Year</th>
      <th>Player first name</th>
      <th>Player last name</th>
      <th>Series number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <tr>
        <td><%= card.user %></td>
        <td><%= card.manufacturer %></td>
        <td><%= card.year %></td>
        <td><%= card.player_first_name %></td>
        <td><%= card.player_last_name %></td>
        <td><%= card.series_number %></td>
        <td><%= link_to 'Show', card %></td>
        <td><%= link_to 'Edit', edit_card_path(card) %></td>
        <td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

