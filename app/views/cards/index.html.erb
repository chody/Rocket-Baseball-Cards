<p id="notice"><%= notice %></p>

<h1>Cards</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Card Owner</th>
      <th>Manufacturer</th>
      <th>Year</th>
      <th>Player</th>
      <th>Series Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <tr>
        <td><%= card.user.full_name %></td>
        <td><%= card.manufacturer %></td>
        <td><%= card.year %></td>
        <td><%= card.player_full_name %></td>
        <td><%= card.series_number %></td>
        <td><%= link_to 'Show', card %></td>
        <% if card.user == current_user %>
          <td><%= link_to 'Edit', edit_card_path(card) %></td>
          <td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Card', new_card_path %>
